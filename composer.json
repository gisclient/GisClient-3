{
    "name": "gisclient/author",
    "type": "application",
    "description": "GisClient Author",
    "keywords": ["application", "mapserver"],
    "homepage": "http://gisclient.net",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=5.6.0",
        "ext-curl": "*",
        "symfony/config": "^3.4",
        "symfony/console": "^3.4",
        "symfony/form": "^3.4",
        "symfony/http-foundation": "^3.4",
        "symfony/http-kernel": "^3.4",
        "symfony/routing": "^3.4",
        "symfony/validator": "^3.4",
        "symfony/yaml": "^3.4",
        "phpoffice/phpexcel": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "GisClient\\": "src/"
        },
        "classmap": [
            "lib/gcapp.class.php",
            "lib/GCService.php"
        ],
        "files": [
            "lib/debug.php"
        ]
    },
    "scripts": {
        "create-writable-directories": [
            "mkdir -p fonts",
            "mkdir -p map/tmp",
            "mkdir -p config/debug",
            "mkdir -p public/services/tmp/export",
            "mkdir -p public/services/print/tmp",
            "mkdir -p public/services/documents",
            "mkdir -p public/admin/export",
            "mkdir -p import",
            "mkdir -p files",
            "mkdir -p pixmap",
            "mkdir -p tmp/sess",
            "mkdir -p var/SQLite"
        ],
        "post-install-cmd": [
            "@create-writable-directories"
        ],
        "post-update-cmd": [
            "@create-writable-directories"
        ]
    }
}
