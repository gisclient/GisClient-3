<?xml version="1.0"?>
<ruleset name="R3-GIS ruleset">
    <description>PHP CodeSniffer rules</description>
    
    <!-- config -->
    <config name="testVersion" value="7.4"/>

    <!-- directory to check -->
    <file>./config/</file>
    <file>./lib/</file>
    <file>./public/</file>
    <file>./src/</file>

    <!-- run against the following rules -->
    <rule ref="Generic.PHP.Syntax" />
    <rule ref="PHPCompatibility" />
    <rule ref="PSR2" />
    <rule ref="VariableAnalysis">
        <properties>
            <property name="allowUnusedFunctionParameters" value="true"/>
        </properties>
    </rule>

    <rule ref="Generic.Files.LineLength">
        <!-- show linelength warnings in vscode, but avoid blocking the pipeline because of them-->
        <severity>1</severity>
    </rule>
</ruleset>
